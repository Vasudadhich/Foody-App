<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Note:- the payment is cash on delevery only"
    android:textColor="@color/quantum_googred"
    android:textSize="24sp"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/searchBarTextColor"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView4"
        android:textColor="@color/searchBarTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView5"
        android:textColor="@color/searchBarTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView6"
        android:textColor="@color/searchBarTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart"
        android:layout_width="match_parent"
        android:layout_height="403dp"
        app:layout_constraintEnd_toEndOf="@+id/chechout"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/th"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/quantum_googred"
        android:text="TOTAL:-"
        android:textSize="20sp"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="200dp"
            android:textColor="@color/quantum_googred"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@+id/th"
            android:textSize="20sp" />
    </RelativeLayout>
    <Button
        android:id="@+id/payment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="confirm"
        app:backgroundTint="#FF6813" />
</LinearLayout>
    </androidx.core.widget.NestedScrollView>